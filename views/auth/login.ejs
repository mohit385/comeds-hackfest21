<body>
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-10" style="margin-top: 8%;">
                <div class="card">
                    <h1 class="display-6" style="text-align: center;">Welcome to CoMeds</h1>
                </div>
                <div class="card mt-5">
                    <div class="card-header" style="text-align: center;">
                        <h2>Login</h2>
                    </div>
                    <div class="card-body">
                        <form action="/user/login" method="POST" id="form">
                            <div class="mb-3">
                                <label for="username" class="form-label">Enter name:</label>
                                <input type="text" class="form-control" id="username" aria-describedby="usernameHelp"
                                    placeholder="username" name="username">
                                <div id="usernameHelp" class="form-text">We'll never share your username with anyone
                                    else.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" placeholder="Password"
                                    name="password">
                            </div>
                            <button type="submit" class="btn btn-primary">Login</button>
                            <hr>
                            <p class="mt-3">New User? <a href="/user/register">Signup</a></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
