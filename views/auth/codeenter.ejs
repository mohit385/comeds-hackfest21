                                    <label class="form-label" for="phone">Your phone number: </label>
                                    <input class="form-control" type="text" name="ccode" id="ccode" readonly value=<%= phone.substring(0,3) %> />
                                </div>
                                <div class="mb-3">
                                    <input class="form-control" type="tel" name="phone" id="phone" readonly
                                        value= <%= phone.substring(3) %> />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="otp">Enter the 6-digit code you received: </label>
                                <input class="form-control" type="number" name="otp" id="otp" />
                            </div>
                            <div>
                                <button type="submit" class="btn btn-info">Verify!!!</button>
                            </div>
                    </div>
                </div>
            </div>
        </div>
