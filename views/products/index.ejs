<%- include('../partials/header') %>



    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-6 col-sm-8 col-xs-10 offset-2" style="margin-top: 8%;">
                <div class="card">
                    <h1 class="display-6" style="text-align: center;">All Products here</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <% for(product of foundProducts){ %>
                <div class="col-lg-4 col-sm-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <%= product.name %>
                        </div>
                        <img src="<%= product.images[0] ?  product.images[0].url : '' %>" alt="Product Image"
                            class="card-img-top" style="height: 18rem;">
                        <div class="card-body">
                            <p><span class="badge bg-info text-dark">Category: <%= product.category %></span>
                            </p>
                            <p>â‚¹ <%= product.price %>
                            </p>
                            <a href='/products/<%= product._id %>'><button class="btn btn-primary">Show
                                    More Info</button></a>
                            <a href='/products/<%= product._id %>/buy'><button class="btn btn-success">Buy
                                    Now</button></a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
